<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.hello" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="NfcPlugin">
        <param name="android-package" value="com.chariotsolutions.nfc.plugin.NfcPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="BluetoothSerial">
        <param name="android-package" value="com.megster.cordova.BluetoothSerial" />
    </feature>
    <name>IntelligentShopping</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <splash density="land-hdpi" src="res/screen/android/splash/splash-land-hdpi.png" />
    <splash density="land-ldpi" src="res/screen/android/splash/splash-land-ldpi.png" />
    <splash density="land-mdpi" src="res/screen/android/splash/splash-land-mdpi.png" />
    <splash density="land-xhdpi" src="res/screen/android/splash/splash-land-xhdpi.png" />
    <splash density="land-xxhdpi" src="res/screen/android/splash/splash-land-xxhdpi.png" />
    <splash density="land-xxxhdpi" src="res/screen/android/splash/splash-land-xxxhdpi.png" />
    <splash density="port-hdpi" src="res/screen/android/splash/splash-port-hdpi.png" />
    <splash density="port-ldpi" src="res/screen/android/splash/splash-port-ldpi.png" />
    <splash density="port-mdpi" src="res/screen/android/splash/splash-port-mdpi.png" />
    <splash density="port-xhdpi" src="res/screen/android/splash/splash-port-xhdpi.png" />
    <splash density="port-xxhdpi" src="res/screen/android/splash/splash-port-xxhdpi.png" />
    <splash density="port-xxxhdpi" src="res/screen/android/splash/splash-port-xxxhdpi.png" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="SplashScreenDelay" value="1" />
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="FadeSplashScreenDuration" value="2000" />
    <preference name="android-minSdkVersion" value="16" />
    <preference name="BackupWebStorage" value="none" />
    <preference name="SplashScreen" value="screen" />
    <preference name="xwalkVersion" value="18+" />
    <preference name="xwalkCommandLine" value="--disable-pull-to-refresh-effect" />
    <preference name="xwalkMode" value="embedded" />
    <preference name="xwalkMultipleApk" value="true" />
</widget>
